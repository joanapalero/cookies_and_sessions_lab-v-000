<% cart.each do |item| %>
  <p><%=item%></p>
<% end %>
<%= form_tag 'products/add' do %>
  <%= label_tag "product" %>
  <%= text_field_tag "product" %>
  <%= submit_tag "add to cart" %>
<% end %>

<h1>Your Cart</h1>
<ul>
	<% cart.each do |item| %>
		<li><%= item.to_s %></li>
	<% end %>
</ul>
<%= form_tag do %>
	<%= label_tag "Product" %>
	<%= text_field_tag :product %>
	<%= submit_tag "add to cart" , :id => 'add to cart', :method => 'post' %>
<% end %>
